<div class="mt-32 mb-4">
  <h1 id="contact-heading" class="relative bottom-0 right-2 sm:right-0 multi-col:right-16 text-7xl sm:text-8xl multi-col:text-10xl wide:text-11xl uppercase outlined text-transparent">Contact Me</h1>
  <div class="isolate bg-transparent px-6">
    <form id="contact-form" class="mx-auto mt-4 max-w-3xl">
      <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
        <div>
          <label for="first-name" class="block text-sm font-semibold leading-6 text-gray-900">First name</label>
          <div class="mt-2.5">
            <input required minlength="3" type="text" name="first-name" id="first-name" autocomplete="given-name" class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 caret-blue-highlight shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div>
          <label for="last-name" class="block text-sm font-semibold leading-6 text-gray-900">Last name</label>
          <div class="mt-2.5">
            <input required minlength="1" type="text" name="last-name" id="last-name" autocomplete="family-name" class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 caret-blue-highlight shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="company" class="block text-sm font-semibold leading-6 text-gray-900">Company<span class="font-light ms-2">( Optional )</span></label>
          <div class="mt-2.5">
            <input type="text" name="company" id="company" autocomplete="organization" class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 caret-blue-highlight shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="email" class="block text-sm font-semibold leading-6 text-gray-900">Email</label>
          <div class="mt-2.5">
            <input required type="email" name="email" id="email" autocomplete="email" class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 caret-blue-highlight shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="phone-number" class="block text-sm font-semibold leading-6 text-gray-900">Phone number</label>
          <div class="relative mt-2.5">
            <div class="absolute inset-y-0 left-0 flex items-center">
              <label for="country" class="sr-only">Country</label>
              <select id="country" name="country" class="h-full rounded-md border-0 bg-transparent bg-none py-0 pl-4 pr-9 text-gray-500 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm">
                <option>US</option>
                <option>CA</option>
                <option>EU</option>
              </select>
            </div>
            <input type="tel" name="phone-number" id="phone-number" autocomplete="tel" pattern="[0-9]{10}" class="block w-full rounded-md border-0 px-3.5 py-2 pl-20 text-gray-900 caret-blue-highlight shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="message" class="block text-sm font-semibold leading-6 text-gray-900">Message</label>
          <div class="mt-2.5">
            <textarea required minlength="12" maxlength="2000" name="message" id="message" rows="8" class="block w-full rounded-md border-0 px-3.5 py-2 text-off-black caret-blue-highlight shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-highlight/50 sm:text-sm sm:leading-6"></textarea>
          </div>
        </div>
      </div>
      <div class="mt-10">
        <button id="contact-submit-button" type="submit" class="block w-full rounded-md px-3.5 py-2.5 text-center text-lg font-semibold text-off-white bg-gradient-to-r from-blue-highlight/50 to-purple-highlight/50 hover:from-blue-highlight/75 hover:to-purple-highlight/75 ease-in-out duration-300 hover:scale-110 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-highlight/50">Send Message</button>
      </div>
    </form>
  </div>
</div>
<div id="toast" aria-live="assertive" class="hidden pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6">
  <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
    <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-gradient-to-r from-blue-highlight/20 to-purple-highlight/10 backdrop-blur-xl shadow-lg ring-1 ring-black ring-opacity-5">
      <div class="p-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <span class="fixed flex justify-center items-center h-6 w-6">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-highlight opacity-25"></span>
            </span>
            <svg class="h-6 w-6 text-blue-highlight" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3 w-0 flex-1 pt-0.5">
            <p class="text-sm font-bold text-off-black">Message submitted!</p>
            <p class="mt-1 text-sm text-gray-500">Looking forward to building with you.</p>
          </div>
          <div class="ml-4 flex flex-shrink-0">
            <button id="toast-close-button" type="button" class="inline-flex rounded-md bg-white text-purple-highlight hover:text-purple-highlight/30 focus:outline-none focus:ring-2 focus:ring-purple-highlight focus:ring-offset-2">
              <span class="sr-only">Close</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
