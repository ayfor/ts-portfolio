---
// --- Components ---
import Image from "astro/components/Image.astro";
// -- SVGs -- 
import devLogo from "../content/icons/command-line-logo.svg?raw";
import githubLogo from "../content/icons/contacts/github-logo.svg?raw";
import linkedinLogo from "../content/icons/contacts/linkedin-logo.svg?raw";
import gumroadLogo from "../content/icons/contacts/gumroad-logo.svg?raw";
import xLogo from "../content/icons/contacts/x-logo.svg?raw";
// -- Images --
// import topographImg from "../content/images/vector-black-topographic-map-lines-background.jpg";
---
<div class="flex justify-center max-w-2xl w-full">
  <div class="flex flex-col justify-between items-center">
    <!-- Business Card -->
    <div class="flex flex-col justify-between rounded-2xl bg-off-black min-w-fit w-112 h-96 p-6 text-off-white">
      <div class="flex flex-row w-full items-center">
        <!-- <div class="flex-none h-14 w-14 mr-2">
          <Fragment set:html={devLogo} alt="Command Line Logo" class="h-full w-full" />
        </div> -->
        <div class="flex flex-col w-full">
          <div class="flex flex-row justify-center">
            <h1 class="uppercase text-4xl">
              Joshua Stubbington
            </h1>
          </div>
          <div class="flex flex-row justify-between px-1">
            <p class="text-sm">
              Software Engineer
            </p>
            <p class="text-sm">
              Ottawa, Ontario
            </p>
          </div>
        </div>
      </div>
      <!-- Topographic Image -->
      <!-- <div class="w-full h-36 rounded-xl mt-2 mb-6">
        <Image src={topographImg} alt="Topographic Map" class="object-cover h-full w-full rounded-xl" />
      </div> -->
      <div class="grid grid-cols-2 gap-4 my-2">
        <div class="flex items-center p-2 text-sm font-light hover:text-blue-highlight hover:bg-off-white-transparent rounded-md cursor-pointer ease-in-out duration-300 hover:scale-105 transition">
          <Fragment set:html={githubLogo} alt="GitHub Logo"/>
          <span class="ml-2 inline">Follow on GitHub</span>
        </div>
        <div class="flex items-center p-2 text-sm font-light hover:text-blue-highlight hover:bg-off-white-transparent rounded-md cursor-pointer ease-in-out duration-300 hover:scale-105 transition">
          <Fragment set:html={linkedinLogo} alt="LinkedIn Logo"/>
          <span class="ml-2 inline">Connect on LinkedIn</span>
        </div>
        <div class="flex items-center p-2 text-sm font-light hover:text-blue-highlight hover:bg-off-white-transparent rounded-md cursor-pointer ease-in-out duration-300 hover:scale-105 transition">
          <Fragment set:html={xLogo} alt="X Logo"/>
          <span class="ml-2 inline">Follow on X</span>
        </div>
        <div class="flex items-center p-2 text-sm font-light hover:text-blue-highlight hover:bg-off-white-transparent rounded-md cursor-pointer ease-in-out duration-300 hover:scale-105 transition">
          <Fragment set:html={gumroadLogo} alt="Gumroad Logo"/>
          <span class="ml-2 inline">Shop on Gumroad</span>
        </div>
      </div>
      <div class="grid grid-row-2 gap-4 h-fit mx-2">
        <button class="w-full h-12 rounded-xl bg-transparent border-solid border-2 border-off-white">
          Download Resume
        </button>
        <button class="w-full h-12 rounded-xl bg-blue-highlight">
          Contact Me
        </button>
      </div>
    </div>
    <!-- Pinned Projects -->
    <div class="w-full my-2 lg:my-12">
      <h2 class="font-bold text-2xl">
        Pinned Projects
      </h2>
      <ul role="list" class="mt-3 grid grid-cols-1 gap-5 sm:gap-6">
        <li class="col-span-1 flex rounded-lg hover:shadow-lg ease-in-out duration-300 transition hover:scale-105">
          <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center bg-purple-highlight/50 rounded-md text-sm font-medium text-white"></div>
          <div class="flex flex-1 items-center justify-between truncate bg-transparent">
            <div class="flex-1 truncate px-4 py-2 text-sm cursor-pointer">
              <a class="font-medium">Graph API</a>
              <p class="text-off-black/60">December 6th, 2023</p>
            </div>
            <div class="flex-shrink-0 pr-2">
              <button type="button" class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-transparent focus:outline-none hover:ring-2 hover:ring-purple-highlight/50 hover:bg-purple-highlight/50 focus:ring-offset-2">
                <span class="sr-only">Open options</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>                              
              </button>
            </div>
          </div>
        </li>
        <li class="col-span-1 flex rounded-lg hover:shadow-lg ease-in-out duration-300 transition hover:scale-105">
          <div class="flex h-14 w-14 flex-shrink-0 items-center justify-center bg-red-highlight/50 rounded-md text-sm font-medium text-white"></div>
          <div class="flex flex-1 items-center justify-between truncate bg-transparent">
            <div class="flex-1 truncate px-4 py-2 text-sm cursor-pointer">
              <a class="font-medium">Graph API</a>
              <p class="text-off-black/60">December 6th, 2023</p>
            </div>
            <div class="flex-shrink-0 pr-2">
              <button type="button" class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-transparent focus:outline-none hover:ring-2 hover:ring-red-highlight/50 hover:bg-red-highlight/50 focus:ring-offset-2">
                <span class="sr-only">Open options</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>                              
              </button>
            </div>
          </div>
        </li>
      </ul>
    </div>
</div>